package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test {
    name: "ExpressLogTests",
    srcs: [
        "src/**/*.java",
        ":expresslog-test-gen",
        ":statslog_express-java-gen", // ExpressLogHelper.java
        ":statslog-framework-java-gen", // FrameworkStatsLog.java
    ],
//    sdk_version: "core_platform",
//    min_sdk_version: "33",
    static_libs: [
        "androidx.test.runner"
    ],
    libs: [
        "framework",
    ],
    platform_apis: true,
    certificate: "platform",
//    test_config: "configs/expresslog.xml",
    test_suites: ["device-tests"],
}

genrule {
    name: "expresslog-test-gen",
    tools: ["express_log_api_gen"],
    cmd: "$(location express_log_api_gen) --domain tex_test" +
        " --java $(out)" +
        " --javaPackage android.test.expresslog" +
        " --javaClass ExpressLog",
    out: [
        "android/test/expresslog/ExpressLog.java",
    ],
    srcs: [
        ":metric_config_files",
    ],
}
